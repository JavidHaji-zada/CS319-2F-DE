   <children>
      <ImageView fitHeight="151.0" fitWidth="371.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../Assets/images/exitbg.jpg" />
         </image>
      </ImageView>
      <VBox alignment="TOP_CENTER" maxHeight="150.0" maxWidth="370.0" minHeight="150.0" minWidth="368.0" prefHeight="150.0" prefWidth="370.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="370.0" minWidth="370.0" prefHeight="28.0" prefWidth="370.0" text="Are you sure you want to exit ?" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="21.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" maxHeight="107.0" maxWidth="370.0" minHeight="107.0" minWidth="370.0" prefHeight="107.0" prefWidth="370.0" spacing="20.0">
               <children>
                  <Button fx:id="closeButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="40.0" maxWidth="80.0" minHeight="40.0" minWidth="80.0" mnemonicParsing="false" onAction="#exitGame" opacity="0.65" prefHeight="40.0" prefWidth="80.0" text="EXIT" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="backButton" maxHeight="40.0" maxWidth="80.0" minHeight="40.0" minWidth="80.0" mnemonicParsing="false" onAction="#goBack" opacity="0.58" prefHeight="40.0" prefWidth="80.0" text="GO BACK" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets right="40.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
